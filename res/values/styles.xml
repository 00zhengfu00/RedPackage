<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:screenOrientation">portrait</item>
    </style>

    <!-- Application theme. -->
    <style name="ActivityBaseTheme">
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:screenOrientation">portrait</item>
    	<item name="android:configChanges">keyboardHidden|orientation</item>
    </style>

    
    <style name="personal_list_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_90dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/home_menustyle_paddingbottom</item>
        <item name="android:paddingLeft">@dimen/home_menustyle_paddingleft</item>
        <item name="android:paddingRight">@dimen/home_menustyle_paddingleft</item>
        <item name="android:paddingTop">@dimen/home_menustyle_paddingtop</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/home_menustyle_textsize</item>
    </style>
    
</resources>
